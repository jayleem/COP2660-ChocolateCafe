<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jayleem.chocolatecafe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dessert"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_dessert"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChocolateMacaroon"></activity>
        <activity android:name=".ChocolateMousse" />
        <activity android:name=".ChocolateCake" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>